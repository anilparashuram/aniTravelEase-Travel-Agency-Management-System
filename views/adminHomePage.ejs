    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
        <script type="text/javascript">

        var buses = [];
        for(let i=0; i<bus.length; i++) buses.push({ x:bus[i].x, y:bus[i].y });

        var tours = [];
        for(let i=0; i<tour.length; i++) tours.push({ x:tour[i].x, y:tour[i].y });

        window.onload = function () {

            var ticketsChart = new CanvasJS.Chart("ticketsChart",
            {
                animationEnabled: true,
                title:{
                text: "Tickets booked"
            },
            data: 
            [
                {
                    type: "spline",
                    dataPoints: buses
                },
                {
                    type: "spline",
                    dataPoints: tours
                }
            ]});
            ticketsChart.render();


            var agencies = [];
            for(let i=0; i<travel_agency.length; i++) agencies.push({ x:travel_agency[i].x, y:travel_agency[i].y });

            var chart = new CanvasJS.Chart("travelagency", {
                title:{
                    text: "Travel Agencies"              
                },
                data: 
                [              
                    {
                        // Change type to "doughnut", "line", "splineArea", etc.
                        type: "column",
                        dataPoints: agencies
                    }
                ]
            });
            chart.render();

        }
        </script>
